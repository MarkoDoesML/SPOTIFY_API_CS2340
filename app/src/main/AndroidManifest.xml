<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SPOTIFY_API_APP"
        tools:targetApi="31">
        <activity
            android:name=".MainFeedActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">

            <!-- This intent filter will make LoginActivity the entry point of the app -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"> <!-- Keep this true if MainActivity can be started by other apps or components -->
            <!-- No intent filter means this is not the entry point -->
            <!-- If MainActivity requires custom data handling, the data element should be inside the activity or its relevant intent-filter -->
        </activity>

        <activity
            android:name=".WrappedActivity"
            android:exported="false" />
        <activity
            android:name=".ArtistsActivity"
            android:exported="false" />
        <activity
            android:name=".SongsActivity"
            android:exported="false" />
        <activity
            android:name=".AlbumsActivity"
            android:exported="false" />
    </application>

</manifest>