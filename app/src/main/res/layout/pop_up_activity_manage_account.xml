<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Material3.Dark"
    android:background="@color/dark_gray"
    android:padding="35dp">

    <TextView
        android:id="@+id/UpdateEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Email"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="30sp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/UpdateEmailEditText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="New Email"
        app:layout_constraintTop_toBottomOf="@id/UpdateEmailTextView"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/UpdateEmailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Email"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/UpdateEmailEditText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/UpdatePasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Password"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="30sp"
        android:paddingTop="40dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/UpdateEmailButton" />

    <EditText
        android:id="@+id/UpdatePasswordEditText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="New Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/UpdatePasswordTextView" />

    <Button
        android:id="@+id/UpdatePasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Password"
        android:paddingTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/UpdatePasswordEditText" />

    <Button
        android:id="@+id/ReturnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:backgroundTint="@color/med_gray"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>